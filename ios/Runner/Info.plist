<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>Fire Manifesting</string>

    <!-- JSON File Handling for "Open In" -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>JSON File</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.json</string>
                <string>public.text</string>  <!-- Extra compatibility for text-based formats -->
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>  <!-- Ensures your app is listed as an editor -->
            <key>LSHandlerRank</key>
            <string>Owner</string>   <!-- Prioritize your app over others -->
        </dict>
    </array>

    <!-- Fix: Ensure proper file handling and "Open In" support -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>

    <!-- Enable "Open In" and file sharing -->
    <key>UIFileSharingEnabled</key>
    <true/>

    <!-- Required for correct bundle type -->
    <key>CFBundlePackageType</key>
    <string>APPL</string>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <key>CFBundleExecutable</key>
    <string>$(EXECUTABLE_NAME)</string>

    <!-- Required for file access -->
    <key>NSDocumentsDirectoryUsageDescription</key>
    <string>This app needs access to documents to allow file sharing.</string>
    
    <!-- **Fix for App Store Warning** -->
    <key>NSPhotoLibraryUsageDescription</key>
    <string>This app allows users to select files, which may include images, from their device.</string>


    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIStatusBarHidden</key>
    <false/>

    <!-- Fix: Ensure proper iPad multitasking support -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationPortraitUpsideDown</string>  <!-- Required for iPad -->
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>

    <key>CADisableMinimumFrameDurationOnPhone</key>
    <true/>
</dict>
</plist>
    
