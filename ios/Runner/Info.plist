<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDisplayName</key>
    <string>Fire Manifesting</string>

    <!-- ✅ JSON File Handling for "Open In" -->
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>JSON File</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>public.json</string>
                <string>public.data</string>  <!-- ✅ Extra compatibility -->
            </array>
            <key>CFBundleTypeRole</key>
            <string>Editor</string>  <!-- ✅ Editor role ensures your app can modify the file -->
            <key>LSHandlerRank</key>
            <string>Owner</string>   <!-- ✅ Prefer your app over others -->
        </dict>
    </array>

    <!-- ✅ Allows opening files in place (Google Drive, Files, etc.) -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <true/>

    <!-- ✅ Universal File Opening Support -->
    <key>UIFileSharingEnabled</key>
    <true/>
    <key>UISupportsDocumentBrowser</key>
    <true/>

    <key>CFBundleIdentifier</key>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
    <key>CFBundleShortVersionString</key>
    <string>$(FLUTTER_BUILD_NAME)</string>
    <key>CFBundleVersion</key>
    <string>$(FLUTTER_BUILD_NUMBER)</string>
    <key>LSRequiresIPhoneOS</key>
    <true/>

    <!-- ✅ Required to access files -->
    <key>NSDocumentsDirectoryUsageDescription</key>
    <string>This app needs access to documents to allow file sharing.</string>

    <key>UIApplicationSupportsIndirectInputEvents</key>
    <true/>
    <key>UILaunchStoryboardName</key>
    <string>LaunchScreen</string>
    <key>UIStatusBarHidden</key>
    <false/>

    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>
